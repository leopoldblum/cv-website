---
const { title, date, location } = Astro.props;
---

<div class="p-2 pl-0">
    <div class="flex justify-between">
        <div>
            <h1 class="text-text-main">{title}</h1>
            <h2 class="text-text-secondary">
                <slot />
            </h2>
        </div>

        <div class="flex flex-col">
            <h1 class="text-text-main">{date}</h1>
            <h1 class="text-text-secondary">{location}</h1>
        </div>
    </div>
</div>
